      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.user && jsonData.user.id) {",
                  "        pm.environment.set(\"user_id\", jsonData.user.id);",
                  "        pm.environment.set(\"username\", jsonData.user.username);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"testuser\",\n    \"email\": \"test@example.com\",\n    \"first_name\": \"Test\",\n    \"last_name\": \"User\",\n    \"password\": \"testpass123\",\n    \"password_confirm\": \"testpass123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register/",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register", ""]
            },
            "description": "Register a new user account"
          },
          "response": []
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    // Save JWT tokens",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.tokens) {",
                  "        pm.environment.set(\"access_token\", jsonData.tokens.access);",
                  "        pm.environment.set(\"refresh_token\", jsonData.tokens.refresh);",
                  "    }",
                  "    ",
                  "    // Save session cookie",
                  "    var cookies = pm.cookies.all();",
                  "    var sessionCookie = cookies.find(cookie => cookie.name === 'sessionid');",
                  "    if (sessionCookie) {",
                  "        pm.environment.set(\"session_id\", sessionCookie.value);",
                  "    }",
                  "    ",
                  "    // Save user info",
                  "    if (jsonData.user) {",
                  "        pm.environment.set(\"user_id\", jsonData.user.id);",
                  "        pm.environment.set(\"username\", jsonData.user.username);",
                  "        pm.environment.set(\"user_email\", jsonData.user.email);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"{{username}}\",\n    \"password\": \"testpass123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login/",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login", ""]
            },
            "description": "Login and create session"
          },
          "response": []
        },
